{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"sourceMap": true,
		"baseUrl": "./",
		"lib": ["esnext", "dom"],
		"noEmit": true,
		"skipLibCheck": true,
		"paths": {
			"~": ["node_modules"],
			"@/*": ["src/*"]
		}
	}
}
